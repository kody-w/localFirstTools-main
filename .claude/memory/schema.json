{
  "version": "1.0",
  "description": "RappterZoo shared agent memory schema",
  "entry": {
    "id": "string (uuid4)",
    "timestamp": "string (ISO 8601)",
    "type": "enum: created | molted | scored | audited | linked | note",
    "target": "string (relative path, e.g. apps/category/file.html)",
    "data": {
      "title": "string (optional)",
      "score": "number (optional)",
      "scoreBefore": "number (optional, for molted entries)",
      "scoreAfter": "number (optional, for molted entries)",
      "linkedTo": "array of strings (optional, targets)",
      "linkedAgents": "array of strings (optional, agent names)",
      "notes": "string (optional)"
    }
  },
  "agentMemory": {
    "agent": "string (agent name)",
    "lastUpdated": "string (ISO 8601)",
    "entries": "array of entry objects"
  },
  "ledger": {
    "relationships": [
      {
        "id": "string (uuid4)",
        "timestamp": "string (ISO 8601)",
        "source": "string (target path or agent name)",
        "target": "string (target path or agent name)",
        "relation": "enum: teaches | improves | duplicates | relates_to | derived_from | competes_with",
        "agent": "string (which agent created this relationship)",
        "notes": "string (optional)"
      }
    ],
    "consistencyHash": "string (md5 of sorted relationship ids)"
  }
}
